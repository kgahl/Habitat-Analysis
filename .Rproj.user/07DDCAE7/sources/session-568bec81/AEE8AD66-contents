library(dplyr)
library(readr)


##### DATA #####

##Read In
#All data available
NotAsFishy <- read_csv("Output/NotAsFishy.csv")

# Sum the number of observations per tag with their associated month and stream and species

Tag_Sum <- table(NotAsFishy$Tag)


Sum_Of_Tags <- as.data.frame(t(unlist(Tag_Sum)), quote = FALSE) %>%
  rename(Tag = Var2)


Sum_Of_Tags_Plus <- Sum_Of_Tags %>%
  merge(NotAsFishy, Sum_Of_Tags, by.x = 'Tag', by.y = 'Tag', all.x = TRUE)%>%
  select(Tag, Freq, Stream, Month, Species, Mesohabitat, Longitude, Latitude, CreationDate)


write.csv(Sum_Of_Tags, file = "SumOfTags.csv")
write.csv(Sum_Of_Tags_Plus, file = "SumOfTagsPlus.csv")

